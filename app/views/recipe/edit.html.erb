<form action="/recipe/<%= @recipe.id %>/show" method="post">
  <input name="_method" type="hidden" value="patch">
  <label class="control-label" for="name">Name</label>
  <input class="form-control" id="name" name="name" type="text" value="<%= @recipe.name %>">

  <label class="control-label" for="instructions">Instructions</label>
  <input class="form-control" id="instructions" name="instructions" type="text" value="<%= @recipe.instructions %>">

  <label class="control-label" for="rating">Rating 1-5</label>
  <input class="form-control" id="rating" name="rating" type="text" value="<%= @recipe.rating %>">

  <label class="control-label" for="contributor_id">Contributor ID</label>
  <input class="form-control" id="contributor_id" name="contributor_id" type="text" value="<%= @recipe.contributor_id %>">

  <button class="btn btn-default">+</button>
</form>

<a href="/">Home</a>
